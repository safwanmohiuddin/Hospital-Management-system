<odoo>
<data>

<!--TREE VIEW -->
    <record id = "view_hospital_patient_tag_tree" model = "ir.ui.view">
        <field name = "name">hospital.patient.tag.tree</field>
        <field name = "model">hospital.patient.tag</field>
        <field name = "arch" type = "xml">
            <list string = "Patient Tag" editable = "top">
                <field name = "name"/>
                <field name = "sequence" widget = "handle"/>
            </list>
        </field>
    </record>



    <!--ACTION ITEM -->
      <record id = "patient_tag_action" model="ir.actions.act_window">
          <field name = "name">Patients Tags</field>
          <field name = "res_model">hospital.patient.tag</field>
          <field name = "view_mode">list</field>
      </record>

</data>

</odoo>